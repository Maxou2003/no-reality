{% extends 'base.twig' %}

{% block title %}Explore
{% endblock %}

{% block head %}
	<link rel="stylesheet" href="{{URL}}css/sidebar.css">
	<link rel="stylesheet" href="{{URL}}css/profile.css">
	<link rel="stylesheet" href="{{URL}}css/explore.css">
	<link rel="stylesheet" href="{{URL}}css/custom-modal.css">
	<link rel="stylesheet" href="{{URL}}css/follow-modal.css">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="icon" href="{{URL}}img/favicon.ico" type="image/x-icon">

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script src="{{URL}}js/post_view.js" defer></script>
	<script src="{{URL}}js/heart_icons.js" defer></script>
	<script src="{{URL}}js/post_view.js" defer></script>
	<script src="{{URL}}js/global_variables.js" defer></script>
	<script src="{{URL}}js/sidebar_search.js" defer></script>
	<script src="{{URL}}js/profile_decision_tab.js" defer></script>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
	<div class="main-content">
			<!-- Post gallery-->
        <div class="explore-container">
            <div class="explorer-header">
                <span class="expl-top"> <strong> Non personnalis√© </strong></span>
            </div>
			<div class="explore-posts">
				{% for post in posts %}
					<div class="post" onclick="openModalPost(`{{post.post_id}}`)"><img src="{{POST_IMG_PATH}}{{post.post_picture_path}}" alt="Post">
					</div>
				{% endfor %}
			</div>

		    {% include 'post-modal.twig'%}
		
		</div>
	</div>
{% endblock %}
