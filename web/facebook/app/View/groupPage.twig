{% extends 'base.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{URL}}css/groupPage.css">
    <link rel="stylesheet" href="{{URL}}css/home.css">
    <script src="{{URL}}js/groupHeader.js" defer></script>
{% endblock %}

{% block content %}
    {% include 'navbar.twig' with {'URL': URL} %}
    {% include 'groupHeader.twig' with {'URL': URL , 'group':group, 'PROFILE_IMG_PATH':PROFILE_IMG_PATH,'nb_friends':nb_friends} %}
    <div class="group_container">
        <div class="group_info">
            <div class="post_col">
            {% for post in posts %}
                <div class="post-container">
                    <div class="post-top-row">
                        <div class="user-profile">
                            <a href="{{URL}}profile/{{post.user_slug}}"><img src="{{PROFILE_IMG_PATH}}{{post.user_pp_path}}" alt="Avatar"></a>
                            <div class="post-data">
                                <a href="{{URL}}profile/{{post.user_slug}}"><span class="post-data-name">{{post.user_firstname}} {{post.user_lastname}}</span></a>
                                <span class="post-data-date">{{post.time_stamp.format('Y-m-d H:i')}}</span>
                            </div>
                        </div>
                        <div class="post-setting">
                            <span><i class="fa fa-ellipsis-h"></i></span>
                        </div>
                    </div>
                    <p class="post_text">{{post.post_content}}</p>
                    {% if post.post_picture_path is not empty %}
                        <div class="post_img_container">
                            <img src="{{POST_IMG_PATH}}{{post.post_picture_path}}" alt="Post Image" class="post_img">
                        </div>
                    {% endif %}
                    <div class="post-bottom-row">
                        <div class="post-bottom-row-item">
                            <ion-icon src="{{URL}}img/svg-icons/thumbs-up-outline.svg"></ion-icon>
                            <span>J'aime</span>
                        </div>
                        <div class="post-bottom-row-item">
                            <ion-icon src="{{URL}}img/svg-icons/chatbubble-outline.svg"></ion-icon>
                            <span>Commenter</span>
                        </div>
                        <div class="post-bottom-row-item">
                            <ion-icon src="{{URL}}img/svg-icons/people-circle-outline.svg"></ion-icon>
                            <span>Envoyer</span>
                        </div>
                        <div class="post-bottom-row-item">
                            <ion-icon src="{{URL}}img/svg-icons/arrow-redo-outline.svg"></ion-icon>
                            <span>Partager</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
            <div class="info_col">
                <div class="group_intro">
                    <h3>About</h3>
                    <p class="intro_text">{{group.group_description}}</p>
                    <ul>
                        <li> <ion-icon name="earth-outline"></ion-icon>  Public</li>
                        <p> Tout le monde peut voir qui est dans le groupe et ce qui est publi√©.</p>
                        <li> <ion-icon name="eye-outline"></ion-icon> Visible </li>
                        <p> Tout le monde peut trouver ce groupe.</p>
                    </ul>
                </div>
                <div class="group_intro">
                    <div class="title_box">
                        <h3>Discussions</h3>
                    </div>
                    <div class="photo_box">
                        {% for post in posts|slice(0, 9) %}
                            {# <div class="photo_box_item"><img src="{{POST_IMG_PATH}}{{post.post_picture_path}}" alt=""></div> #}
                        {% endfor %}
                    </div>
                </div>
            </div>
            
        </div>
    </div>
{% endblock %}
