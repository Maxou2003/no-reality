{% extends 'base.twig' %}

{% block head %}
    <link rel="stylesheet" href="{{URL}}css/profileAbout.css">
    <link rel="stylesheet" href="{{URL}}css/profileHeader.css">
    <link rel="stylesheet" href="{{URL}}css/home.css">
    <script src="{{URL}}js/profileHeader.js" defer></script>
    <script src="{{URL}}js/profileAbout.js" defer></script>
{% endblock %}

{% block content %}
    {% include 'navbar.twig' with {'URL': URL} %}
    {% include 'profileHeader.twig' with {'URL': URL , 'user':user, 'PROFILE_IMG_PATH':PROFILE_IMG_PATH,'nb_friends':nb_friends} %}
    
    <div class="profile_container">
        <div class="profile_info">
            <div class="info_col">
                <div class="profile_intro">
                    
                    
                    <div class='about-container'>
                        <div class="about-nav">
                            <h3 class="about-title">About</h3>
                            <button class="about-nav-item active" onclick="changeActiveAboutNav(event)" id="overview">Overview</button>
                            <button class="about-nav-item"onclick="changeActiveAboutNav(event)" id="work-school">Work and School</button>
                            <button class="about-nav-item"onclick="changeActiveAboutNav(event)"id="location">Location</button>
                            <button class="about-nav-item"onclick="changeActiveAboutNav(event)"id="general-information">General Information</button>
                        </div>
                        
                        <div class="about-content">
                            <div class="about-section">
                                <ul class="about-list overview">
                                     {% if user.user_work %}
                                    <li class="about-list-item">
                                        <i class="fa-solid fa-briefcase"></i>
                                        <span>A étudié à {{user.user_work}}</span>
                                    </li>
                                    {% endif %}
                                
                                    {% if user.user_school %}
                                    <li class="about-list-item">
                                        <i class="fas fa-graduation-cap"></i>
                                        <span>A étudié à {{user.user_school}}</span>
                                    </li>
                                    {% endif %}
                                    {% if user.user_location %}
                                    <li class="about-list-item">
                                        <i class="fas fa-home"></i>
                                        <span>Habite à {{user.user_location}}</span>
                                    </li>
                                    {% endif %}
                                    {% if user.user_hometown %}
                                    <li class="about-list-item">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span>De {{user.user_hometown}}</span>
                                    </li>
                                    {% endif %}
                                </ul>
                                
                                <ul class="about-list work-school">
                                     {% if user.user_work %}
                                    <li class="about-list-item">
                                        <i class="fa-solid fa-briefcase"></i>
                                        <span>A étudié à {{user.user_work}}</span>
                                    </li>
                                    {% endif %}
                                
                                    {% if user.user_school %}
                                    <li class="about-list-item">
                                        <i class="fas fa-graduation-cap"></i>
                                        <span>A étudié à {{user.user_school}}</span>
                                    </li>
                                    {% endif %}
                                </ul>

                                <ul class="about-list location">
                                    
                                    {% if user.user_location %}
                                    <li class="about-list-item">
                                        <i class="fas fa-home"></i>
                                        <span>Habite à {{user.user_location}}</span>
                                    </li>
                                    {% endif %}
                                </ul>

                                <ul class="about-list general-information">
                            
                                    <li class="about-list-item">
                                        <i class="fa-solid fa-briefcase"></i>
                                        <span>Year of birth : 1981 </span>
                                    </li>
                                
                                    <li class="about-list-item">
                                        <i class="fas fa-graduation-cap"></i>
                                        <span>Gender: male</span>
                                    </li>
                                   
                                    <li class="about-list-item">
                                        <i class="fas fa-home"></i>
                                        <span>Website: http://noreality.eu/hates</span>
                                    </li>

                                   
                                </ul>

                            </div>
                            
                            {% if is_current_user %}
                            <div class="add-info-section">
                                <button class="add-info-button">
                                    <i class="fas fa-plus"></i>
                                    <span>Ajouter une information</span>
                                </button>
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="profile_intro friends-container">
                    <div class="friends-header">
                        <h3 class="friends-title">Ami(e)s</h3>
                        <span class="friends-count">{{nb_friends}} ami(e)s • 4 en commun</span>
                    </div>
                    
                    <div class="friends-nav">
                        <a href="#" class="friends-nav-item active">Tous les amis</a>
                        <a href="#" class="friends-nav-item">Ami(e)s en commun</a>
                        <a href="#" class="friends-nav-item">Université</a>
                        <a href="#" class="friends-nav-item">Ville d'origine</a>
                        <a href="#" class="friends-nav-item">Suivi(e)s</a>
                    </div>
                    
                    <div class="friends_box">
                        {% for friend in friends|slice(0, 9) %}
                        <a href="{{URL}}/profile/{{friend.user_slug}}" class="friend-item">
                            <div class='friend-profile_picture'>
                                <img src="{{PROFILE_IMG_PATH}}{{friend.user_pp_path}}" alt=""> 
                            </div>
                            <p>{{friend.user_firstname}}</p>
                        </a>
                        {% endfor %}
                    </div>
                    
                    <a href="{{URL}}profile/{{user.user_slug}}/friends" class="see-all-friends">Voir tous les amis</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}