    <div class="group-top">
        <div class="group-cover">
            <img src="{{POST_IMG_PATH}}{{group.group_banner_picture_path}}" alt="cover" class="img-cover">
            <span class="group-cover-info">Group managed by {{group.group_name}}</span>
        </div>
        <div class="group_detail">
            <div class="group_detail_left">
                <div class="group_row">
                    <div class="group-info">
                        <span class="group-name">{{group.group_name}}</span>
                        <span class="group-members"><ion-icon src="{{URL}}img/svg-icons/earth.svg"></ion-icon> Group (Public) Â· {{ group.nb_members}} members</span>
                    </div>
                </div>
                <div class="members-header-container">
                    {% for member in members|slice(0, 20) %}
                    <div class="members-header-picture">
                        <a class="user-page-link" href="{{URL}}groups/{{group.group_slug}}/user/{{member.users.user_slug}}"><img src="{{PROFILE_IMG_PATH}}{{member.users.user_pp_path}}" alt="User_pp"></a>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="group_detail_right">
                <span>+ Invite</span>
                <span><i class='fas fa-user-friends'></i></ion-icon> Share</span>
                <span><i class='fas fa-users'></i> Member</span>
                <br />
            </div>
        </div>
        <div class="group-links-container">
            <div class="group-links">
                <div class="group-links-items">
                    <a href="{{URL}}groups/{{group.group_slug}}"><span class="group-link-item" id="discussions">Discussion</span></a>
                    <a href="{{URL}}groups/{{group.group_slug}}/announcements"><span class="group-link-item" id="announcements">Announcements</span></a>
                    <a href="{{URL}}groups/{{group.group_slug}}/members"><span class="group-link-item" id="members">Members</span></a>
                    <a href="{{URL}}groups/{{group.group_slug}}/media"><span class="group-link-item" id="media">Media</span></a>
                </div>
                <div class="group-link-more">
                    <a href=""><span class="search-in-group"><ion-icon src="{{URL}}img/svg-icons/search-outline.svg"></ion-icon></i></span></a>
                    <a href=""><span><i class="fa fa-ellipsis-h"></i></span></a>
                </div>
            </div>
        </div>
    </div>